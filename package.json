{
  "name": "rely-on",
  "version": "3.1.0-types.beta.1",
  "description":
    "Returns selected DOM elements and throws an error if they are null.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "echo 'No tests defined' && exit 0",
    "prettier": "prettier './{src,test}/**/*.ts' --write",
    "prelint": "npm run prettier",
    "lint": "tslint './{src,test}/**/*.ts'",
    "prebuild": "npm run lint && rimraf dist",
    "build": "tsc --declaration",
    "postbuild": "flowgen dist/index.d.ts --output-file dist/index.js.flow",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["front-end", "typescript"],
  "repository": "https://github.com/DanArthurGallagher/rely-on",
  "author": "Daniel Arthur Gallagher <dagher_oss@icloud.com>",
  "license": "ISC",
  "devDependencies": {
    "flowgen": "^1.2.0",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.8.0",
    "typescript": "^2.4.0"
  }
}
